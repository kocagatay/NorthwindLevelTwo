@model ProductUpdateViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Update Product</h1>
<form asp-controller="Admin" asp-action="Update" method="post">
    <div>
        <div class="form-group">
            <label asp-for="Product.ProductName"></label>
            <input asp-for="Product.ProductName" class="form-control" placeholder="Ürün Adı" />
            <span asp-validation-for="Product.ProductName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.CategoryId"></label>
            <select asp-for="Product.CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories,"CategoryId","CategoryName"))"></select>
            <span asp-validation-for="Product.CategoryId"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.UnitPrice"></label>
            <input asp-for="Product.UnitPrice" class="form-control" placeholder="Birim Fiyat" />
            <span asp-validation-for="Product.UnitPrice"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.UnitsInStock">Stok Adedi</label>
            <input asp-for="Product.UnitsInStock" class="form-control" placeholder="Stok Adedi" />
            <span asp-validation-for ="Product.UnitsInStock"></span>
        </div>
    </div>
    <input type="hidden" asp-for="Product.ProductId"/>
    <input type="submit" value="Güncelle" class="btn btn-success btn-group-sm" />

</form>
